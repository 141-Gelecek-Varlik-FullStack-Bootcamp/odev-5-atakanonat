@using Comm.Model.Product
@model Product
@{
    var Product = (Product)ViewBag.Product.Entity;
    ViewData["title"] = Product.Name;
}

<body>
    <form method="post" action="/Product/@Product.Id">
        <div>
            <label for="Name">Product Name:</label>
            <input type="text" id="Name" name="Name" value="@Product.Name">
        </div>
        <div>
            <label for="Price">Price:</label>
            <input type="number" step="0.01" id="Price" name="Price" min="0" value="@Product.Price">
        </div>
        <div>
            <label for="Stock">Stock Count:</label>
            <input type="number" step="1" id="Stock" name="Stock" min="0" value="@Product.Stock">
        </div>
        <div>
            <label for="Description">Description:</label>
            <textarea name="Description" id="Description" cols="30" rows="3">@Product.Description</textarea>
        </div>
        <button type="submit">Update</button>
    </form>
</body>